{
  "name": "playwrighttest",
  "version": "1.0.0",
  "description": "UI Test for https://artoftesting.com/samplesiteforselenium using Playwright, Typescript and POM",
  "main": "test/test.spec.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "test": "playwright test --project chromium",
    "test-visual": "npm run test -- --headed",
    "interact": "npm run test -- --ui",
    "debug": "npm run test -- --debug",
    "generate-report": "npm run test -- --reporter=html",
    "show-report": "playwright show-report"
  },
  "keywords": [
    "Playwright",
    "UI",
    "Test",
    "POM",
    "Typescript",
    "ES Module"
  ],
  "author": "Sunpreet Singh Rathor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:rathorsunpreet/playwrightTest.git"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^5.3.2"
  }
}
